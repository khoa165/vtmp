{
  "name": "vtmp",
  "version": "1.0.0",
  "repository": "git@github.com:khoa165/vtmp.git",
  "author": "Viet Tech Mentorship Program <viettechmentorshipprogram@gmail.com>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "frontend": "yarn workspace @vtmp/common build && yarn workspace @vtmp/web-client dev",
    "backend": "yarn workspace @vtmp/common build && yarn workspace @vtmp/web dev",
    "fa": "yarn workspace @vtmp/web-client add",
    "fr": "yarn workspace @vtmp/web-client remove",
    "ba": "yarn workspace @vtmp/web add",
    "br": "yarn workspace @vtmp/web remove",
    "dev": "concurrently \"yarn workspace @vtmp/web-client dev\" \"yarn workspace @vtmp/web dev\" \"yarn workspace @vtmp/common dev\"",
    "cc": "cookiecutter -c=cookiecutter/cookiecutter.config.js",
    "blog": "tsx ./scripts/generate-metadata.ts",
    "lint": "yarn eslint .",
    "test": "yarn workspace @vtmp/common build && yarn workspace @vtmp/web run test",
    "tslint": "tslint --project tsconfig.json --config tslint.json",
    "tslint-fix": "tslint --project tsconfig.json --config tslint.json --fix",
    "postinstall": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@tsconfig/node22": "^22.0.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.17",
    "@types/nodemailer": "^6.4.17",
    "@types/sinon": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "concurrently": "^9.1.2",
    "cookiecutter": "^1.3.0",
    "eslint": "^9.26.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.26.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx,md,html,css}": [
      "prettier --write --config .prettierrc",
      "eslint --fix --config eslint.config.js"
    ]
  },
  "workspaces": [
    "packages/common",
    "web-client",
    "web"
  ],
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.3",
    "zod": "^3.24.4"
  }
}
