{
  "name": "vtmp",
  "version": "1.0.0",
  "repository": "git@github.com:khoa165/vtmp.git",
  "author": "Viet Tech Mentorship Program <viettechmentorshipprogram@gmail.com>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "client": "cd web-client && yarn run start",
    "add-client": "cd web-client && yarn add",
    "remove-client": "cd web-client && yarn remove",
    "server": "cd web && yarn run dev",
    "add-server": "cd web && yarn add",
    "remove-server": "cd web && yarn remove",
    "dev": "concurrently \"yarn run server\" \"yarn run client\"",
    "ppp": "yarn install && cd web && yarn install && cd ../web-client && yarn install && cd ..",
    "pp": "cd web && yarn install --immutable && cd ../web-client && yarn install --immutable && cd .. && yarn install --immutable",
    "cc": "cookiecutter -c=cookiecutter/cookiecutter.config.js",
    "blog": "node ./scripts/generate-metadata.js",
    "lint": "yarn eslint .",
    "test": "cd web && yarn run test",
    "tslint": "tslint --project tsconfig.json --config tslint.json",
    "tslint-fix": "tslint --project tsconfig.json --config tslint.json --fix",
    "postinstall": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/sinon": "^17.0.4",
    "concurrently": "^9.1.2",
    "cookiecutter": "^1.3.0",
    "eslint": "^9.22.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx,md,html,css}": [
      "prettier --write --config .prettierrc",
      "eslint --fix --config eslint.config.js"
    ]
  }
}
