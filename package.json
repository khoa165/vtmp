{
  "name": "vtmp",
  "version": "1.0.0",
  "repository": "git@github.com:khoa165/vtmp.git",
  "author": "Viet Tech Mentorship Program <viettechmentorshipprogram@gmail.com>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.8.1",
  "scripts": {
    "frontend": "yarn workspace @vtmp/common build && yarn workspace @vtmp/web-client dev",
    "backend": "yarn workspace @vtmp/common build && yarn workspace @vtmp/server-common build && yarn workspace @vtmp/mongo build && yarn workspace @vtmp/web dev",
    "fa": "yarn workspace @vtmp/web-client add",
    "fr": "yarn workspace @vtmp/web-client remove",
    "ba": "yarn workspace @vtmp/web add",
    "br": "yarn workspace @vtmp/web remove",
    "dev": "yarn turbo run dev",
    "build": "yarn turbo run build",
    "test": "yarn turbo run test",
    "cc": "cookiecutter -c=cookiecutter/cookiecutter.config.js",
    "seed": "yarn workspace @vtmp/web seed",
    "migrate": "yarn build && yarn workspace @vtmp/mongo-migrations migrate",
    "blog": "tsx ./scripts/generate-metadata.ts",
    "type-check": "tsc --noEmit --project ./web && tsc --noEmit --project ./packages/common && tsc --noEmit --project ./web-client/tsconfig.app.json",
    "lint": "yarn eslint . && yarn type-check",
    "lint-config": "npx @eslint/config-inspector@latest",
    "lint-fix": "yarn eslint . --fix",
    "tslint": "tslint --project tsconfig.json --config tslint.json",
    "tslint-fix": "tslint --project tsconfig.json --config tslint.json --fix",
    "postinstall": "husky",
    "docker-build-backend": "docker build -f ./apps/web/Dockerfile -t vtmp/backend:local .",
    "docker-run-backend": "docker run --env-file ./apps/web/.env  --rm -it -p 8000:8000 vtmp/backend:local",
    "docker-build-frontend": "docker build --no-cache -f ./apps/web-client/Dockerfile -t vtmp/frontend:local .",
    "docker-run-frontend": "docker run --env-file ./apps/web-client/.env -it -p 3000:3000 vtmp/frontend:local",
    "clean": "rm -rf node_modules packages/*/node_modules apps/*/node_modules",
    "check": "yarn install --immutable && yarn build && yarn test"
  },
  "workspaces": [
    "packages/common",
    "packages/server-common",
    "packages/mongo",
    "apps/web-client",
    "apps/web",
    "apps/discord-service",
    "apps/link-processing-service",
    "apps/mongo-migrations"
  ],
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@stylistic/eslint-plugin": "^4.4.0",
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.14.1",
    "@types/sinon": "^17.0.4",
    "@typescript-eslint/parser": "^8.33.0",
    "concurrently": "^9.1.2",
    "cookiecutter": "^1.3.0",
    "eslint": "^9.22.0",
    "eslint-import-resolver-typescript": "^4.4.1",
    "eslint-plugin-check-file": "^3.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-sort-exports": "^0.9.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "syncpack": "^13.0.4",
    "tsx": "^4.19.3",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.26.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx,md,html,css}": [
      "prettier --write --config .prettierrc",
      "eslint --fix --config eslint.config.ts"
    ]
  }
}
