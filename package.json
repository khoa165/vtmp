{
  "name": "vtmp",
  "version": "1.0.0",
  "repository": "git@github.com:khoa165/vtmp.git",
  "author": "Viet Tech Mentorship Program <viettechmentorshipprogram@gmail.com>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.8.1",
  "scripts": {
    "frontend": "yarn turbo run dev --filter=@vtmp/web-client",
    "backend": "yarn turbo run dev --filter=@vtmp/web",
    "fa": "yarn workspace @vtmp/web-client add",
    "fr": "yarn workspace @vtmp/web-client remove",
    "ba": "yarn workspace @vtmp/web add",
    "br": "yarn workspace @vtmp/web remove",
    "dev": "turbo dev --filter=@vtmp/web --filter=@vtmp/web-client",
    "cc": "cookiecutter -c=cookiecutter/cookiecutter.config.js",
    "bp": "turbo build --filter=\"./packages/*\"",
    "bw": "turbo build --filter=\"./apps/*\" --filter=@vtmp/web-client --filter=@vtmp/web",
    "pp": "yarn install --immutable && yarn bp",
    "seed": "yarn workspace @vtmp/web seed",
    "migrate": "yarn bp && yarn workspace @vtmp/mongo-migrations migrate",
    "blog": "tsx ./scripts/generate-metadata.ts",
    "type-check": "tsc --noEmit --project ./web && tsc --noEmit --project ./packages/common && tsc --noEmit --project ./web-client/tsconfig.app.json",
    "lint": "yarn eslint . && yarn type-check",
    "lint-config": "npx @eslint/config-inspector@latest",
    "lint-fix": "yarn eslint . --fix",
    "test": "yarn bp && yarn workspace @vtmp/web test && yarn workspace @vtmp/link-processing-service test",
    "tslint": "tslint --project tsconfig.json --config tslint.json",
    "tslint-fix": "tslint --project tsconfig.json --config tslint.json --fix",
    "postinstall": "husky",
    "docker-build-backend": "docker build -f web/Dockerfile -t vtmp/backend:local .",
    "docker-run-backend": "docker run --env-file ./web/.env  --rm -it -p 8000:8000 vtmp/backend:local",
    "docker-build-frontend": "docker build -f web-client/Dockerfile -t vtmp/frontend:local .",
    "docker-run-frontend": "docker run --env-file ./web-client/.env -it -p 3000:3000 vtmp/frontend:local",
    "clean": "rm -rf node_modules packages/*/node_modules web/node_modules web-client/node_modules",
    "check": "yarn install --immutable && yarn test && yarn bw"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "web-client",
    "web",
    "discord-service",
    "link-processing-service"
  ],
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@stylistic/eslint-plugin": "^4.4.0",
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.14.1",
    "@types/sinon": "^17.0.4",
    "@typescript-eslint/parser": "^8.33.0",
    "concurrently": "^9.1.2",
    "cookiecutter": "^1.3.0",
    "eslint": "^9.22.0",
    "eslint-import-resolver-typescript": "^4.4.1",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-check-file": "^3.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-sort-exports": "^0.9.1",
    "eslint-plugin-typescript-sort-keys": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "syncpack": "^13.0.4",
    "tsx": "^4.19.3",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.26.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx,md,html,css}": [
      "prettier --write --config .prettierrc",
      "eslint --fix --config eslint.config.ts"
    ]
  }
}
